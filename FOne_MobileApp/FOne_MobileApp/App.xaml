<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FOne_MobileApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="mDark">#484848</Color>
            <Color x:Key="mRed">#FF0000</Color>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor"  Value="{ StaticResource mDark}"/>
                <Setter Property="BarTextColor"  Value="{ StaticResource mRed}"/>
            </Style>
            <Style ApplyToDerivedTypes="True" TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="LightYellow" />
            </Style>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="FontFamily" Value="MuliRegular" />
            </Style>
            <Color x:Key="orange">#FFA700</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>